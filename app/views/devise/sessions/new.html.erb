<h2>Log in</h2>

<div class="columns"> 
  <div class="column is-9">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="control">                    
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: {class: "input", autocomplete: "email" }%>
      </div>          
      <div class="control">       
        <%= f.input :password,
                    required: false,
                    input_html: {class: "input", autocomplete: "current-password" } %>
      </div>  
      <div class="checkbox">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%> 
      </div>
      <%= f.button :submit, "Log in", class: "button is-primary" %>
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</div>